{
  "name": "betterbe",
  "version": "0.4.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "!/**/__test__",
    "!*.test.*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke": "yarn build && yarn lint && yarn test",
    "docs": "typedoc && prettier --ignore-unknown --write docs/",
    "-- PRE-COMMIT HOOKS --": "",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.12.11",
    "eslint": "^9.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0",
    "vitest": "^1.6.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericvera/ohno.git"
  },
  "keywords": [
    "input",
    "validation"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  },
  "packageManager": "yarn@4.2.2"
}
